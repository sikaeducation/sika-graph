{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"esnext"
		],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	],
	"files": [
		"vite.config.ts"
	],
	"exclude": [
		"node_modules"
	]
}
